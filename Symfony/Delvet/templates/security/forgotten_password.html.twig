{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié!{% endblock %}

{% block body %}
<form method="post" class="forgotten">

    <h1 class="h3 mb-3 font-weight-normal">Mot de passe oublié</h1>
    <p>Veuillez renseigner votre email</p>
    <label for="inputEmail" class="sr-only">Email</label>
    <input type="email" value="" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    
    <button class="btn btn-lg btn-primary" type="submit">
        Envoyer le mail
    </button>
</form>
{% endblock %}
